# vim: ft=make

ifndef SAGA_MB_ROOT
	$(error need SAGA_MB_ROOT defined!)
endif

ifndef MAKE_CFG_IN
       MAKE_CFG_IN=yes

SAGA_LOCATION      = @SAGA_LOCATION@
SAGA_MAKE_DIR      = @SAGA_MAKE_DIR@
HAVE_PNG           = @HAVE_LIBPNG@
HAVE_PNGWRITER     = @HAVE_LIBPNGWRITER@
HAVE_X11           = @HAVE_LIBX11@
HAVE_FT            = @HAVE_LIBFT@

PNG_SOURCE         = @LIBPNG_SOURCE@
PNGWRITER_SOURCE   = @LIBPNGWRITER_SOURCE@
FREETYPE_SOURCE    = @LIBFT_SOURCE@


include $(SAGA_MAKE_DIR)/saga.util.mk


ifeq "$(HAVE_PNGWRITER)-$(USE_PNGWRITER)" "yes-yes"
 SAGA_CXXFLAGS  += -DHAVE_PNGWRITER
 SAGA_CXXFLAGS  += @LIBPNGWRITER_CPPFLAGS@
 SAGA_LDFLAGS   += @LIBPNGWRITER_LDFLAGS@
endif


ifeq "$(HAVE_PNG)-$(USE_PNG)" "yes-yes"
 SAGA_CXXFLAGS  += -DHAVE_PNG
 SAGA_CXXFLAGS  += @LIBPNG_CPPFLAGS@
 SAGA_LDFLAGS   += @LIBPNG_LDFLAGS@
endif


ifeq "$(HAVE_FT)-$(USE_FT)" "yes-yes"
 FLAGS          += -DHAVE_FREETYPE
 SAGA_CXXFLAGS  += @LIBFT_CPPFLAGS@
 SAGA_LDFLAGS   += @LIBFT_LDFLAGS@
endif


ifeq "$(HAVE_X11)-$(USE_X11)" "yes-yes"
 FLAGS          += -DHAVE_X11
 SAGA_CXXFLAGS  += @LIBX11_CPPFLAGS@
 SAGA_LDFLAGS   += @LIBX11_LDFLAGS@
endif


endif # guard

