  <!-- Description of the session - a file can contain multiple sessions -->
  <TaskFarmingSession name="CacutsShrimps" version="0.1" user="oweidner" 
    priority="1" experimentID="LocalAgentTest" eventLevel="DEBUG">
    
	<!-- The orchestrator host (AdvertDB) -->
	<OrchestratorDB>
	  <Host>fortytwo.cct.lsu.edu:5432</Host>
	</OrchestratorDB>
	
    <!-- List of hostst we want to run comp. agents on -->
    <TargetHosts>
      <Host queue="" arch="x86_64" OS="Linux">gg101.cct.lsu.edu</Host>
      <Host queue="" arch="x86_64" OS="Linux">gg201.cct.lsu.edu</Host>
    </TargetHosts>
    
    <!-- Application binaries for different platforms/architectures -->
    <ApplicationBinaries>
	
      <BinaryImage arch="x86_64" OS="Linux" extraArgs="">
		any://gg101.cct.lsu.edu/sc/bin/shrimp_Linux_X86/
	  </BinaryImage>
      <BinaryImage arch="x86_64" OS="Darwin" extraArgs="">
		any://gg101.cct.lsu.edu/sc/bin/shrimp_Darwin_X86/
	  </BinaryImage>
      <BinaryImage arch="PowerPC" OS="AIX" extraArgs="">
		any://gg101.cct.lsu.edu/sc/bin/shrimp_AIX_ppc/
	  </BinaryImage>
	  
    </ApplicationBinaries>

    <!-- List of independent work packages aka "chunks" -->  
    <ApplicationChunks>
	
      <Chunk name="evol_01" invokeString="cactus1.par">
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/data1.dat"</File>
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/cactus1.par"</File>
      </Chunk>
      
      <Chunk name="evol_02" invokeString="cactus2.par">
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/data2.dat"</File>
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/cactus2.par"</File>
      </Chunk>
      
      <Chunk name="evol_03" invokeString="cactus3.par">
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/data3.dat"</File>
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/cactus3.par"</File>
      </Chunk>
      
      <Chunk name="evol_04" invokeString="cactus4.par">
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/data4.dat"</File>
        <File stageIn="YES">any://gg101.cct.lsu.edu/sc/in/cactus4.par"</File>
      </Chunk>
	  
    </ApplicationChunks>
    
  </TaskFarmingSession>
  
