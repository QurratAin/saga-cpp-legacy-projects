<?xml version="1.0" encoding="ISO-8859-1"?>

<MRDL version="1.0" 
      xmlns="http://cct.lsu.edu/MRL-1-0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema_instance" >

  <!-- Description of the session - a file can contain multiple sessions -->
  <MapReduceSession name="WordCount" 
                    version="0.1" 
                    user="miklos" 
                    priority="1" 
                    experimentID="SshAgentTest" 
                    eventLevel="DEBUG">

    <!-- The orchestrator host (AdvertDB) -->
    <OrchestratorDB>
      <Host>
        advert://fortytwo.cct.lsu.edu:5432
      </Host>
    </OrchestratorDB>

    <!-- List of hosts we want to run comp. agents on -->
    <TargetHosts>
       <Host arch="i686" OS="Linux">
        ssh://my.worker1/
      </Host>
      <Host arch="i686" OS="Linux">
        ssh://my.worker2/
      </Host>
    </TargetHosts>
    <MasterAddress>tcp://my.master:80099</MasterAddress>
    <!-- Application binaries for different platforms/architectures -->
    <ApplicationBinaries>
      <BinaryImage arch="i686" OS="Linux" extraArgs="">
        /path/to/code/MapReduce.2009/examples/wordcount/wordcount
      </BinaryImage>
    </ApplicationBinaries>

    <!-- Output file system schema and base location -->
    <OutputBase>file://localhost//path/to/test-output/</OutputBase>

  </MapReduceSession>

</MRDL>
