BETA=$1  #5.18375
SEED=$2  #9702

RUNDIR=/data/lqcd/runs/0041

WIDS=$(grep ${BETA},${SEED}  master.log | grep -e '->'| cut -c 63- | uniq)

echo "all workers computing snapshot BETA=$BETA SEED=$SEED"

for W in $WIDS; do
D=$RUNDIR/`printf '%.05d' $W`
H=`grep -1 '########## HOSTNAME ##########' $D/vcard.txt | grep -v '########## HOSTNAME ##########'`
echo wid $W host $H
done
